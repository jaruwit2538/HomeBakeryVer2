<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.khowoatt.homebakery.CheckOrder">

    <android.support.v7.widget.Toolbar
        android:id="@+id/barmain"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@android:color/background_light"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteY="-2dp" />

    <Button
        android:id="@+id/btnback"
        android:layout_width="@dimen/icon"
        android:layout_height="@dimen/icon"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/iconback"
        android:onClick="clickback"
        app:layout_constraintBottom_toBottomOf="@+id/barmain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listcheck"
        android:layout_width="380dp"
        android:layout_height="500dp"
        android:layout_marginBottom="36dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barmain" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="ตรวจสอบสถานะการสั่งจอง"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/barmain"
        app:layout_constraintEnd_toEndOf="@+id/barmain"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toEndOf="@+id/btnback"
        app:layout_constraintTop_toTopOf="@+id/barmain"
        app:layout_constraintVertical_bias="0.391" />


</android.support.constraint.ConstraintLayout>
